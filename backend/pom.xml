    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <packagingExcludes>WEB-INF/lib/tomcat-*.jar,WEB-INF/classes/config/application-*.properties
                    </packagingExcludes>
                    <archive>
                        <manifestEntries>
                            <version>${project.version}</version>
                            <Implementation-Title>whois-webui</Implementation-Title>
                            <Implementation-Version>${implementation-version}</Implementation-Version>
                            <Spring-Boot-Version>${spring-boot.version}</Spring-Boot-Version>
                            <Main-Class>org.springframework.boot.loader.WarLauncher</Main-Class>
                            <Start-Class>net.ripe.whois.Application</Start-Class>
                        </manifestEntries>
                    </archive>
                    <webResources>
                        <resource>
                            <directory>src/main/resources-filtered</directory>
                            <filtering>true</filtering>
                            <targetPath>WEB-INF/classes</targetPath>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dist-to-webapp</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../frontend/dist</directory>
                                    <excludes>
                                        <exclude>scripts/app.constants.js</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                            <outputDirectory>${project.basedir}/src/main/webapp</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty.version}</version>
                <configuration>
                    <jvmArgs>-Xmx2g</jvmArgs>
                    <jettyXml>
                        src/test/resources/jetty/jetty.xml,src/test/resources/jetty/jetty-http.xml,src/test/resources/jetty/jetty-ssl.xml,src/test/resources/jetty/jetty-https.xml
                    </jettyXml>
                    <systemProperties>
                        <!-- These properties are set only when running jetty from mvn.-->
                        <systemProperty>
                            <name>org.apache.tomcat.util.buf.UDecoder.ALLOW_ENCODED_SLASH</name>
                            <value>true</value>
                            <name>org.apache.catalina.connector.CoyoteAdapter.ALLOW_BACKSLASH</name>
                            <value>true</value>
                            <name>org.eclipse.jetty.LEVEL</name>
                            <value>DEBUG</value>
                            <name>jsse.enableSNIExtension</name>
                            <value>false</value>
                            <name>jetty.ssl.sniHostCheck</name>
                            <value>false</value>
                            <name>spring.profiles.active</name>
                            <value>local</value>
                        </systemProperty>
                    </systemProperties>
                    <reload>manual</reload>
                    <contextXml>${basedir}/src/test/resources/jetty/jetty-context.xml</contextXml>

                    <webAppConfig>
                        <contextPath>/db-web-ui</contextPath>
                        <jettyEnvXml>${basedir}/src/test/resources/jetty/jetty-env.xml</jettyEnvXml>
                        <resourceBases>
                            <resourceBase>${basedir}/../frontend/dist</resourceBase>
                        </resourceBases>
                    </webAppConfig>
                </configuration>
                <dependencies>
                    <!-- jetty server dependencies -->
                    <dependency>
                        <groupId>log4j</groupId>
                        <artifactId>log4j</artifactId>
                        <version>1.2.16</version>
                    </dependency>
                    <dependency>
                        <groupId>javax.mail</groupId>
                        <artifactId>mail</artifactId>
                        <version>1.4.1</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <argLine>-Xmx256m</argLine>
                    <!-- Force alphabetical order to have a reproducible build -->
                    <runOrder>alphabetical</runOrder>
                    <redirectTestOutputToFile>${test.redirectOutput}</redirectTestOutputToFile>
                    <includes>
                        <include>${test.files.unit}</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.18.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <redirectTestOutputToFile>${test.redirectOutput}</redirectTestOutputToFile>
                    <includes>
                        <include>${test.files.integration}</include>
                    </includes>
                    <excludes>
                        <exclude>**/Abstract*</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>tests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <test.files.integration>**/*TestIntegration.class</test.files.integration>
                <test.files.unit>**/*Test.class</test.files.unit>
                <test.redirectOutput>true</test.redirectOutput>
            </properties>
        </profile>
