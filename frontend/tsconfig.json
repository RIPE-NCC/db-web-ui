{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./tmp",
    "rootDir": "./app",
    "sourceMap": true,
    "inlineSources": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "angular",
    "angular-cookies",
    "angular-ui-router",
    "lodash",
    "moment"
  ],
  "include": [
    "./app/**/*.js",
    "./app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app/main-aot.ts"
  ]
}
