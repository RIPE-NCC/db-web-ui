{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./ts-app/",
    "outDir": "./.tmp"
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "angular",
    "lodash"
  ],
  "compileOnSave": true,
  "exclude": [
    "./bower_components/*",
    "./node_modules/*",
    "**/*-aot.ts"
  ]
}
