{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./app",
    "outDir": "./.tstmp"
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "angular",
    "angular-cookies",
    "angular-ui-router",
    "lodash"
  ],
  "compileOnSave": true,
  "include": [
    "./app/**/*.js",
    "./app/**/*.ts"
  ]
}
